<% if @current_user %>

<div class="row">
    <div class="col-12">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Nom</th>
              <th scope="col">Description</th>
              <th scope="col">Statut</th>
              <th scope="col">Mail</th>
              <th scope="col">Site web</th>
            </tr>
          </thead>
          <tbody>
            <% @brands.each.each do |brand| %>
                <tr class="<% if brand.brand_status == 'Validé' %>bg-valide
                           <% elsif brand.brand_status == 'Ban' %>bg-refuse
                           <% elsif brand.brand_status == 'Refusé' %>bg-refuse
                           <% elsif brand.brand_status == 'Contacté' %>bg-contact
                           <% elsif brand.brand_status == 'Relancé' %>bg-relance
                           <% elsif brand.brand_status == 'En cours' %>bg-cours
                           <% end %>">
                  <td><a href="/brands/<%= brand.id %>"><%= brand.brand_title %></a></td>
                  <td><%= brand.brand_desc.truncate_words(6) %></td>
                  <td><%= brand.brand_status %></td>
                  <td><%= brand.brand_mail %></td>
                  <td><a href="<%= brand.brand_website %>" target="_blank"><%= brand.brand_website %></a></td>
                </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-12">
        <%= paginate @brands %>
    </div>
</div>
  
<% else %>
  <h1>Bienvenue visiteur anonyme !</h1>
<% end %>