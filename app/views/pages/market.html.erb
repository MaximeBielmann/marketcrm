<% if @current_user %>

<div class="row">
    <div class="col-12">
        <table class="table text-center">
          <thead>
            <tr>
              <th scope="col">Marque</th>
              <th scope="col">Coach</th>
              <th scope="col">Groupe FB</th>
              <th scope="col">Inscrit</th>
              <th scope="col">Stripe</th>
              <th scope="col">Exp√©dition</th>
              <th scope="col">Frontpage</th>
              <th scope="col">Produits</th>
            </tr>
          </thead>
          <tbody>
            <% @brands.each do |brand| %>
                <tr>
                  <th scope="row"><a href="/brands/<%= brand.id %>"><%= brand.brand_title %></a></th>
                  <td><%= brand.brand_market_coach %></td>
                  <td><% if brand.brand_group == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                  <td><% if brand.brand_market_sign == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                  <td><% if brand.brand_market_paiement == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                  <td><% if brand.brand_market_shipping == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                  <td><% if brand.brand_market_frontpage == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                  <td><% if brand.brand_market_products == true %><i class="fas fa-check text-success"></i><% else %><i class="fas fa-times text-danger"></i><% end %></td>
                </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

<% else %>
  <h1>Bienvenue visiteur anonyme !</h1>
<% end %>